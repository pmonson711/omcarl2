(library
 (public_name omcrl2)
 (preprocess
  (pps ppx_deriving.show ppx_deriving.eq))
 (libraries menhirLib))

(ocamllex
 (modules lexer))

(menhir
 (modules tokens)
 (flags --unused-tokens --only-tokens --table))

(menhir
 (modules tokens sort_parser sort_parser_value)
 (merge_into sort_parser)
 (flags
  --explain
  (--external-tokens Tokens)
  (--unused-token DAMP)
  (--unused-token DBAR)
  (--unused-token DOT)
  (--unused-token DRARROW)
  (--unused-token EQUALITY)
  (--unused-token EXCLAIM)
  (--unused-token EXISTS)
  (--unused-token FALSE)
  (--unused-token FORALL)
  (--unused-token GREATERTHAN)
  (--unused-token INEQUALITY)
  (--unused-token LAMBDA)
  (--unused-token LESSTHAN)
  (--unused-token L_BRACE)
  (--unused-token L_BRACK)
  (--unused-token NEGATION)
  (--unused-token NUMBER)
  (--unused-token R_BRACE)
  (--unused-token R_BRACK)
  (--unused-token TRUE)))

(menhir
 (modules tokens sort_parser cons_parser cons_parser_value)
 (merge_into cons_parser)
 (flags
  --explain
  (--external-tokens Tokens)
  (--unused-token DAMP)
  (--unused-token DBAR)
  (--unused-token DOT)
  (--unused-token DRARROW)
  (--unused-token EQUAL)
  (--unused-token EQUALITY)
  (--unused-token EXCLAIM)
  (--unused-token EXISTS)
  (--unused-token FALSE)
  (--unused-token FORALL)
  (--unused-token GREATERTHAN)
  (--unused-token INEQUALITY)
  (--unused-token LAMBDA)
  (--unused-token LESSTHAN)
  (--unused-token L_BRACE)
  (--unused-token L_BRACK)
  (--unused-token NEGATION)
  (--unused-token NUMBER)
  (--unused-token R_BRACE)
  (--unused-token R_BRACK)
  (--unused-token TRUE)))

(menhir
 (modules tokens sort_parser data_parser data_parser_value)
 (merge_into data_parser)
 (flags
  --explain
  (--external-tokens Tokens)
  (--unused-token EXISTS)
  (--unused-token EQUAL)))
